        <ul class="nav-menu">
          <li class="nav-item">
            <a href="https://expensemanagement-e6i4.onrender.com/companies/<%= id %>/managers/<%= user.managerId %>" class="nav-link active">
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
